{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${workspaceFolder}/main.cpp",
          "${workspaceFolder}/game.cpp",
          "-o",
          "${workspaceFolder}/app.exe",
          "-I",
          "C:/SFML/include",
          "-L",
          "C:/SFML/lib",
          "-lsfml-graphics",
          "-lsfml-window",
          "-lsfml-system"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task by SFML setup."
      }
    ]
}
